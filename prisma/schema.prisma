generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Issue {
  id        Int      @id @default(autoincrement())
  rawText   String   @db.Text
  cleanText String   @db.Text
  cluster   Int
  createdAt DateTime @default(now())
}

model Seminar {
  id          Int     @id @default(autoincrement())
  title       String
  description String? @db.Text
  cluster     Int
}
